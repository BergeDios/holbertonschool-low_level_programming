# _*_ MAKEFILE _*_


CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

clean: 
	$(RM) *~ *.swp $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	oclean
	clean
re:
	fclean
	all
