# _*_ MAKEFILE _*_


CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)
.PHONY: school
school: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)
.PHONY: clean
clean: 
	$(RM) -f *~ *.swp $(NAME)
.PHONY: oclean
oclean:
	$(RM) -f *.o
.PHONY: fclean
fclean:
	oclean
	clean
.PHONY: re
re:
	fclean
	all
